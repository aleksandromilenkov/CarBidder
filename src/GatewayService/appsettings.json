{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "IdentityServer": {
        "Url": "http://localhost:5001"
    },

    "ReverseProxy": {
        "Routes": {
            "identity": {
                "ClusterId": "identity",
                "Match": {
                    "Path": "/connect/{**catch-all}"
                }
            },
            "auctionsRead": {
                "ClusterId": "auctions",
                "Match": {
                    "Path": "/auctions/{**catch-all}",
                    "Methods": [ "GET" ]
                },
                "Transforms": [
                    { "PathPattern": "api/auctions/{**catch-all}" }
                ]
            },

            "auctionsWrite": {
                "ClusterId": "auctions",
                "AuthorizationPolicy": "default",
                "Match": {
                    "Path": "/auctions/{**catch-all}",
                    "Methods": [ "POST", "PUT", "DELETE" ]
                },
                "Transforms": [
                    { "PathPattern": "api/auctions/{**catch-all}" }
                ]
            },

            "search": {
                "ClusterId": "search",
                "Match": {
                    "Path": "/search/{**catch-all}",
                    "Methods": [ "GET" ]
                },
                "Transforms": [
                    { "PathPattern": "api/search/{**catch-all}" }
                ]
            }
        }
    }
}
