{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "AllowedHosts": "*",

    "IssuerUri": "http://localhost:5001",

  "ReverseProxy": {
    "Routes": {
      "identity": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/connect/{**catch-all}"
        }
      },
      "auctionsRead": {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/auctions/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          { "PathPattern": "api/auctions/{**catch-all}" }
        ]
      },

      "auctionsWrite": {
        "ClusterId": "auctions",
        "AuthorizationPolicy": "RequireAuctionAppScope",
        "Match": {
          "Path": "/auctions/{**catch-all}",
          "Methods": [ "POST", "PUT", "DELETE" ]
        },
        "Transforms": [
          { "PathPattern": "api/auctions/{**catch-all}" }
        ]
      },

      "search": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          { "PathPattern": "api/search/{**catch-all}" }
        ]
      },

      "bidsWrite": {
        "ClusterId": "bids",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/bids",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          { "PathPattern": "api/bids" }
        ]
      },

      "bidsRead": {
        "ClusterId": "bids",
        "Match": {
          "Path": "/bids/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          { "PathPattern": "api/bids/{**catch-all}" }
        ]
      },
      "notifications": {
        "ClusterId": "notifications",
        "CorsPolicy": "customPolicy",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity": {
        "Destinations": {
          "idp": {
            "Address": "http://identity-clusterip"
          }
        }
      },
      "auctions": {
        "Destinations": {
          "auctionApi": {
            "Address": "http://auction-clusterip"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://search-clusterip"
          }
        }
      },
      "bids": {
        "Destinations": {
          "bidApi": {
            "Address": "http://bid-clusterip"
          }
        }
      },
      "notifications": {
        "Destinations": {
          "notifyApi": {
            "Address": "http://notify-clusterip"
          }
        }
      }
    }
  }
}
